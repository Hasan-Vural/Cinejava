<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="pane" fx:controller="com.cinejava.controllers.LoginPageController">
    <VBox spacing="30" alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 50;">
        <HBox alignment="CENTER">
            <Text fx:id="title" text="Hoş Geldiniz!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>

        <TextField fx:id="usernameField" promptText="Kullanıcı Adı" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />
        <PasswordField fx:id="passwordField" promptText="Şifre" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />


        <HBox spacing="20" alignment="CENTER">
            <Button text="Giriş Yap" fx:id="loginButton" onAction="#onLoginButtonClick" style="-fx-padding: 10px 20px; -fx-font-size: 14px;" />
            <Button text="Kayıt Ol" onAction="#onSignUpButtonClick" style="-fx-padding: 10px 20px; -fx-font-size: 14px;" />
        </HBox>
    </VBox>
</StackPane>