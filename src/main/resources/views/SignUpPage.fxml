<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="pane" fx:controller="com.cinejava.controllers.SignUpPageController">
    <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 50;">
        <!-- Başlık -->
        <HBox alignment="CENTER">
            <Text fx:id="title" text="Kayıt Ol" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>

        <!-- İsim ve Soyisim alanları -->
        <TextField fx:id="firstnameField" promptText="Ad" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />
        <TextField fx:id="lastnameField" promptText="Soyad" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />

        <!-- Kullanıcı adı alanı -->
        <TextField fx:id="usernameField" promptText="Kullanıcı Adı" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />

        <!-- Şifre ve şifre onayı alanları -->
        <PasswordField fx:id="passwordField" promptText="Şifre" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />
        <PasswordField fx:id="confirmPasswordField" promptText="Şifreyi Onayla" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 300px; -fx-max-width: 400px;" />

        <!-- Kayıt Ol ve Geri butonları -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Kayıt Ol" fx:id="signUpButton" onAction="#onSignUpButtonClick" style="-fx-padding: 10px 20px; -fx-font-size: 14px;" />
            <Button text="Geri" onAction="#onBackToLoginButtonClick" style="-fx-padding: 10px 20px; -fx-font-size: 14px;" />
        </HBox>
    </VBox>
</StackPane>
